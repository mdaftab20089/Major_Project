<% layout("/layouts/boiler") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><%= AllListings.title %></h3>
            <img src="<%= AllListings.image.url %>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body mt-1">
                <p class="card-text">
                    <p>Owned by - <%= AllListings.owner.username %></p> 
                    <%= AllListings.description %> <br> <br>
                    <span>Price :- </span>&#x20B9; <%= AllListings.price.toLocaleString("en-IN") %> <br> <br>
                    <span>Location :- </span><%= AllListings.location %> <br> <br>
                    <span>Country :- </span><%= AllListings.country %>
                </p>
                <div class="invalid-feedback">Please enter some comments for review</div>
                <% if(currUser && currUser._id.equals(AllListings.owner._id)) { %>
                <div class="btns">
                    <a href="/listing/<%= AllListings._id %>/edit"><button class="btn btn-dark add-btn ">edit </button></a>
                <form method ="post"  action="/listing/<%= AllListings._id %>?_method=delete"><button class="btn btn-dark btn-delete">delete</button></form>
                </div>
                <% } %>
            </div>
           </div>
        </div>



    <div class="col-8 offset-2">
    <hr>
    <% if(currUser) {%>
    <h4>Leave a review</h4>
    <!-- removed `novalidate` so browser validation can run -->
    <form id="reviewForm" action="/listing/<%= AllListings.id %>/review" method="post" class="needs-validation">
        <div class="mb-3 mt-3">
        <div>
            <label for="rating" class="form-label">Rating</label>
            <input type="range" class="form-range" id="rating" min="0" max="5" name="review[rating]">
        </div>

        <div class="mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="10" rows="5"
                    class="form-control" required></textarea>
            <div class="invalid-feedback">
              Please add some comment for review.
            </div>
        </div>

        <br>
        <button type="submit" class="btn btn-outline-dark">Submit</button>
        </div>
    </form>
    <% } %>
    </div>



    
    
    <div class="col-8 offset-2">
    <p><b>All Reviews</b></p>
    <div class="row">
        <% for (review of AllListings.reviews) { %>
       <div class="card col-5 ms-3 mb-2 ">
        <div class="card-body">
            <h5 class="card-title">@<%= review.author.username %></h5>
            <p class="card-text">Comment :- <%= review.comment %></p>
            <p class="card-text">rating :- <%= review.rating %> stars</p>

            <form action="/listing/<%= AllListings._id %>/review/<%= review._id %>?_method=delete" method="post" class="mb-3">
                <button class="btn btn-sm btn-dark">delete</button>
            </form>
        </div>
    </div>
    <% } %>
    </div>
    </div>

</div>

</body>